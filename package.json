{
    "name": "epic",
    "license": "MIT",
    "version": "1.0.0",
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build"
    },
    "main": "dist/index.cjs.js",
    "module": "dist/index.es.js",
    "types": "dist/index.d.ts",
    "dependencies": {
        "@changesets/cli": "^2.27.1",
        "typescript": "^5.3.3"
    },
    "turbo": {
        "pipeline": {
            "dev": {
                "cache": false
            },
            "build": {
                "dependsOn": [
                    "^build"
                ],
                "outputs": [
                    "dist/**"
                ]
            }
        }
    },
    "devDependencies": {
        "turbo": "^1.11.2",
        "vite-plugin-dts": "^3.6.4"
    }
}
